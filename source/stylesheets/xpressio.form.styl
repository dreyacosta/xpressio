button,
input,
select,
textarea
  border-color rgba(0, 0, 0, 0.15)
  border-style solid
  border-width 1px
  font-family inherit
  font-size 100%
  width 100%
  padding 6px
  color font_base_color
  margin 0 0 4px 0
  outline 0
  vertical-align middle
  -webkit-appearance none

button, input
  line-height normal

button
  width auto

button,
html input[type="button"],
input[type="reset"],
input[type="submit"]
  -webkit-appearance button
  cursor pointer

button[disabled],
input[disabled]
  cursor default

input[type="search"]
  -webkit-appearance textfield
  box-sizing(content-box)

input[type="search"]::-webkit-search-cancel-button,
input[type="search"]::-webkit-search-decoration
  -webkit-appearance none

input[type="checkbox"]
  background white
  border-radius(4px)
  height 1px
  line-height 0px
  width 1px
  -webkit-appearance none
  margin-right 6px
  padding 0.7em
  margin-bottom 0

input[type="radio"]
  background white
  border-radius(50%)
  -webkit-appearance none
  margin-right 6px
  padding 0.7em
  margin-bottom 0
  width auto

input[type="checkbox"]:after,
input[type="radio"]:after
  content " "
  opacity 0

input[type="checkbox"]:checked:after
  color rgb(82, 82, 82)
  content "✔"
  margin-left -6px
  opacity 1

input[type="radio"]:checked:after
  background rgb(82, 82, 82)
  border 5px solid rgb(82, 82, 82)
  border-radius 20px
  content ""
  margin-left -5px
  margin-top -5px
  opacity 1
  position absolute

button::-moz-focus-inner,
input::-moz-focus-inner
  border 0
  padding 0

textarea
  overflow auto
  vertical-align top

input[type="text"]:focus,
input[type="email"]:focus,
input[type="search"]:focus,
input[type="password"]:focus
  border-color rgba(0, 0, 0, 0.30)
  border-bottom-left-radius 0
  border-top-left-radius 0
  border-width 1px
  transition(all 600ms)
  -webkit-appearance none

select
  padding-left 6px

.select
  position relative

.select:after
  color rgba(0,0,0,0.2)
  content "▼"
  top 12%
  right 3%
  pointer-events none
  position absolute

fieldset
  margin 10px 0px
  // padding 0.35em 0.625em 0.75em

legend
  border 0
  padding 0

fieldset label
  font-weight bold
  vertical-align middle

fieldset span
  font-weight bold
  vertical-align middle

.btn, button
  cursor pointer
  display inline-block
  padding 0.2em 1.2em
  transition(all 400ms)
  &.large
    font-size 1.3em
    padding 1em 1.2em
  &.medium
    font-size 1.2em
    padding 0.6em 1.2em
  &.normal
    font-size 1em
    padding 0.4em 1.2em
  &.anchor
    display block
    width 100%

button:hover, .btn:hover
  box-shadow inset 0 0px 100px 0px rgba(0,0,0,0.2)