button,
input,
input[type="text"],
input[type="password"],
input[type="checkbox"],
input[type="radio"],
input[type="email"],
input[type="date"],
input[type="search"],
input[type="submit"],
select,
textarea
  border-color rgba(0, 0, 0, 0.15)
  border-style solid
  border-width 1px
  color font_base_color
  font-family inherit
  font-size 100%
  margin 0 0 4px 0
  outline 0
  padding 6px
  -webkit-appearance none
  vertical-align middle

input[type="text"],
input[type="password"],
input[type="email"],
input[type="date"],
input[type="search"],
select,
textarea
  width 100%

input[type="text"],
input[type="password"],
input[type="email"],
input[type="date"],
input[type="search"],
.select
  height 38px

input[type="search"]::-webkit-search-cancel-button,
input[type="search"]::-webkit-search-decoration
  -webkit-appearance none

button::-moz-focus-inner,
input::-moz-focus-inner
  border 0
  padding 0

input:focus,
textarea:focus
  border-color rgba(0, 0, 0, 0.30)
  border-bottom-left-radius 0
  border-top-left-radius 0
  border-width 1px
  transition(border-color 600ms)

fieldset
  margin 10px 0px

fieldset label,
fieldset span
  vertical-align middle

select
  background transparent
  border-radius(0)
  border 0
  margin 0
  position absolute
  top 50%
  transform(translateY(-50%))
  -moz-appearance treeitem

.select
  border-color rgba(0, 0, 0, 0.15)
  border-style solid
  border-width 1px
  position relative

.select:after
  color rgba(0,0,0,0.2)
  content "▼"
  right 3%
  pointer-events none
  position absolute
  top 50%
  transform(translateY(-50%))

button, .btn
  cursor pointer
  display inline-block
  font-weight font_base_weight
  padding-top .6rem
  padding-bottom .6rem
  padding-left 1.8rem
  padding-right 1.8rem
  transition(400ms linear all)
  vertical-align middle
  &.large
    font-size 1.2rem
    padding-top 1rem
    padding-bottom 1rem
  &.medium
    font-size 1.1rem
    padding-top .8rem
    padding-bottom .8rem
  &.small
    font-size .9rem
    padding-top .4rem
    padding-bottom .4rem

button:hover, .btn:hover
  box-shadow inset 0 0px 100px 0px rgba(0,0,0,0.2)

input[type="checkbox"]
  background white
  border-radius(4px)
  line-height 0px
  margin-bottom 0
  margin-right 6px
  padding 0.7em
  width 14px

input[type="radio"]
  background white
  border-radius(50%)
  padding 0.7em
  margin-bottom 0
  margin-right 6px
  width auto

input[type="checkbox"]:after,
input[type="radio"]:after
  content " "
  opacity 0

input[type="checkbox"]:checked:after
  color rgb(82, 82, 82)
  content "✔"
  margin-left -6px
  opacity 1

input[type="radio"]:checked:after
  background rgb(82, 82, 82)
  border 5px solid rgb(82, 82, 82)
  border-radius 20px
  content ""
  margin-left -5px
  margin-top -5px
  opacity 1
  position absolute