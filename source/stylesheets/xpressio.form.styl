button,
input,
input[type="text"],
input[type="password"],
input[type="checkbox"],
input[type="radio"],
input[type="email"],
input[type="date"],
input[type="search"],
input[type="submit"],
select,
textarea
  border-color rgba(0, 0, 0, 0.15)
  border-style solid
  border-width 1px
  color font_base_color
  font-family inherit
  font-size 100%
  margin 0 0 4px 0
  outline 0
  padding 6px
  -webkit-appearance none
  vertical-align middle

input[type="text"],
input[type="password"],
input[type="email"],
input[type="date"],
input[type="search"],
select,
textarea
  width 100%

input[type="text"],
input[type="password"],
input[type="email"],
input[type="date"],
input[type="search"],
select
  height 38px

input[type="search"]::-webkit-search-cancel-button,
input[type="search"]::-webkit-search-decoration
  -webkit-appearance none

button::-moz-focus-inner,
input::-moz-focus-inner
  border 0
  padding 0

input:focus,
textarea:focus
  border-color rgba(0, 0, 0, 0.30)
  border-bottom-left-radius 0
  border-top-left-radius 0
  border-width 1px
  transition(all 600ms)

fieldset
  margin 10px 0px

fieldset label,
fieldset span
  vertical-align middle

select
  border-radius(0)

.select
  position relative

.select:after
  color rgba(0,0,0,0.2)
  content "▼"
  top 12%
  right 3%
  pointer-events none
  position absolute

button, .btn
  cursor pointer
  display inline-block
  padding 0.2em 1.2em
  transition(all 400ms)
  &.large
    font-size 1.3em
    padding 1em 1.2em
  &.medium
    font-size 1.2em
    padding 0.6em 1.2em
  &.normal
    font-size 1em
    padding 0.4em 1.2em
  &.anchor
    display block
    width 100%

button:hover, .btn:hover
  box-shadow inset 0 0px 100px 0px rgba(0,0,0,0.2)

input[type="checkbox"]
  background white
  border-radius(4px)
  line-height 0px
  margin-bottom 0
  margin-right 6px
  padding 0.7em
  width 14px

input[type="radio"]
  background white
  border-radius(50%)
  padding 0.7em
  margin-bottom 0
  margin-right 6px
  width auto

input[type="checkbox"]:after,
input[type="radio"]:after
  content " "
  opacity 0

input[type="checkbox"]:checked:after
  color rgb(82, 82, 82)
  content "✔"
  margin-left -6px
  opacity 1

input[type="radio"]:checked:after
  background rgb(82, 82, 82)
  border 5px solid rgb(82, 82, 82)
  border-radius 20px
  content ""
  margin-left -5px
  margin-top -5px
  opacity 1
  position absolute