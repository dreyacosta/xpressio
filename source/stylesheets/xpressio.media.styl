@media handheld, only screen and (max-width: 768px)
  header
    &.col1, .col2, .col3, .col4, .col5, .col6, .col7, .col8, .col9, .col10, .col11, .col12, .col13, .col14, .col15, .col16
      margin-top 0

  nav
    text-align center

  .col1, .col2, .col3, .col4, .col5, .col6, .col7, .col8, .col9, .col10, .col11, .col12, .col13, .col14, .col15, .col16
    column(12)
    margin-top 10px

  .desktop
    display none !important

  .flex
    flex-direction-column()

  .inline
    display inherit

  .mobile
    display none !important

  .tablet
    display inherit !important

  if columns_numbers
    for row in columns_numbers
      .columns{row}
        vendor('columns', 1)

  if widths_percentages
    for row in widths_percentages
      .width{row}
        width initial

@media handheld, only screen and (max-width: 480px)
  .desktop
    display none !important

  .mobile
    display inherit !important

  .tablet
    display none !important